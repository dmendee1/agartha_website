extends ../layout/layout

block content
	div.row
		div(class="col-lg-2 header3")
			include ../layout/head
		div.col-lg-10
			div.wrapper
				h1 #{title}
				div.col-sm-3
					div.feedback
						h3 #{typeof msg != 'undefined' ? msg : ''}
						if session.language == 'Mn'
							form(action="/tosent", method="post")
								input.form-control(type="text", placeholder="И-мэйл хаяг", name="mail")
								input.form-control(type="text", placeholder="Нэр", name="name")
								textarea.form-control(type="text", placeholder="Санал хүсэлт", name="text")
								input.form-control(type="submit", value="Илгээх")
						else
							form(action="/tosent", method="post")
								input.form-control(type="text", placeholder="Email", name="mail")
								input.form-control(type="text", placeholder="Name", name="name")
								textarea.form-control(type="text", placeholder="Text", name="text")
								input.form-control(type="submit", value="Send")
						br
						div(class="textdiv")
							each text in texts
								h3 #{text}
				div.col-sm-9
					<iframe src="https://www.google.com/maps/d/u/0/embed?mid=1Vhm8atxfkomkK47d2Ia1ryT2X1GZJF35" width="100%" height="400"></iframe>